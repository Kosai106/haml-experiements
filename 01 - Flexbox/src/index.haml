!!!5
%html
	%head
		%meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
		%meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
		%meta{charset: "utf-8"}

		%link{href: './../node_modules/tether/dist/css/tether.min.css', rel: 'stylesheet'}
		%link{href: './../node_modules/bootstrap/dist/css/bootstrap.min.css', rel: 'stylesheet'}
		%link{href: './../node_modules/font-awesome/css/font-awesome.min.css', rel: 'stylesheet'}
		%link{href: 'main.css', rel: 'stylesheet'}
		%title Flexbox and HAML
	%body

		- @data = [{:id => 1, :author => "Manuel Patrick", :title => "Cooking With The Power Of The Sun", :url => "#1", :image => "https://images.unsplash.com/photo-1477173249897-5afc98d3f565?dpr=1&auto=format&fit=crop&w=1500&h=994&q=80&cs=tinysrgb&crop="},
			{:id => 2, :author => "Aaron Rowe", :title => "Smarter Food Choices 101 Tips For Busy Women", :url => "#2", :image => "https://images.unsplash.com/photo-1452882033718-1caccfcfe77f?dpr=1&auto=format&fit=crop&w=1500&h=1001&q=80&cs=tinysrgb&crop="},
			{:id => 3, :author => "Susie Wilkins", :title => "Is Organic The Way Forward", :url => "#3", :image => "https://images.unsplash.com/photo-1444012236767-1b471c68781c?dpr=1&auto=format&fit=crop&w=1500&h=994&q=80&cs=tinysrgb&crop="},
			{:id => 4, :author => "Floyd Caldwell", :title => "Cooking For One", :url => "#4", :image => "https://images.unsplash.com/photo-1432107294469-414527cb5c65?dpr=1&auto=format&fit=crop&w=1500&h=1000&q=80&cs=tinysrgb&crop="},
			{:id => 5, :author => "Francis Collins", :title => "Regional Cuisine Down Home Southern Cooling", :url => "#5", :image => "https://images.unsplash.com/photo-1445888985293-8e1b904061c4?dpr=1&auto=format&fit=crop&w=1500&h=1000&q=80&cs=tinysrgb&crop="},
			{:id => 6, :author => "Virgie Pierce", :title => "Top 3 Reasons Why You Need Cookie Reciepes", :url => "#6", :image => "https://images.unsplash.com/photo-1446321423766-c339f030bd0a?dpr=1&auto=format&fit=crop&w=1500&h=1125&q=80&cs=tinysrgb&crop="},
			{:id => 7, :author => "Bryan Dennis", :title => "Refrigerated Treats Can Make For A Cool Event", :url => "#7", :image => "https://images.unsplash.com/photo-1470326030020-86a5ef9ca428?dpr=1&auto=format&fit=crop&w=1500&h=1000&q=80&cs=tinysrgb&crop="},
			{:id => 8, :author => "Linnie Miles", :title => "Cooking With Fine Italian Wine", :url => "#8", :image => "https://images.unsplash.com/photo-1461914756888-80f9821f5d17?dpr=1&auto=format&fit=crop&w=1500&h=994&q=80&cs=tinysrgb&crop="},
			{:id => 9, :author => "Roy Garcia", :title => "Thrill Friends And Family With A Make It Yourself Pizza Party", :url => "#9", :image => "https://images.unsplash.com/photo-1484157239365-80e635261db7?dpr=1&auto=format&fit=crop&w=1500&h=1000&q=80&cs=tinysrgb&crop="}]

		.container.text-center
			%h1
				HAML + Flex =
				- (1..3).each do
					%i.fa.fa-heart
			.flex
				- @data.group_by {|x| x[:id]}.each do |id, array|
					- array.each do |x|
						%a.card--outer{href: x[:url], data: {:card_id => id}}
							.card-top__image{style: "background-image: url( #{x[:image]} )"}
							.card-bottom__details
								%span.title= x[:title]
								%hr
								%span.author= x[:author]

			%footer
				%span
					Made with
					%i.fa.fa-heart
					by
					%a{href: 'http://oesterkilde.dk/', target: '_blank'} Kevin Ã˜sterkilde

		%script{src: './../node_modules/jquery/dist/jquery.min.js', type: 'text/javascript'}
		%script{src: './../node_modules/tether/dist/js/tether.min.js', type: 'text/javascript'}
		%script{src: './../node_modules/bootstrap/dist/js/bootstrap.min.js', type: 'text/javascript'}
