!!!5
%html
	%head
		-# Meta
		%meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
		%meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
		%meta{charset: "utf-8"}

		-# Stylesheets
		-# Vendor
		%link{href: '../node_modules/tether/dist/css/tether.min.css', rel: 'stylesheet'}
		%link{href: '../node_modules/bootstrap/dist/css/bootstrap.min.css', rel: 'stylesheet'}
		%link{href: '../node_modules/font-awesome/css/font-awesome.min.css', rel: 'stylesheet'}
		-# Local
		%link{href: 'main.min.css', rel: 'stylesheet'}

		%title Flexbox and HAML
	%body
		-# Our data object. It almost looks like JSON which makes it very easy to work with.
		- @data = [{:id => 1, :author => "Manuel Patrick", :title => "Cooking With The Power Of The Sun", :category => "coffee", :image => "../img/compressed/medium/photo-1444012236767-1b471c68781c.min.jpg"},
			{:id => 2, :author => "Aaron Rowe", :title => "Smarter Food Choices 101 Tips For Busy Women", :category => "coffee", :image => "../img/compressed/medium/photo-1432107294469-414527cb5c65.min.jpg"},
			{:id => 3, :author => "Susie Wilkins", :title => "Is Organic The Way Forward", :category => "coffee", :image => "../img/compressed/medium/photo-1445888985293-8e1b904061c4.min.jpg"},
			{:id => 4, :author => "Floyd Caldwell", :title => "Cooking For One", :category => "coffee", :image => "../img/compressed/medium/photo-1446321423766-c339f030bd0a.min.jpg"},
			{:id => 5, :author => "Francis Collins", :title => "Regional Cuisine Down Home Southern Cooling", :category => "coffee", :image => "../img/compressed/medium/photo-1452882033718-1caccfcfe77f.min.jpg"},
			{:id => 6, :author => "Virgie Pierce", :title => "Top 3 Reasons Why You Need Cookie Reciepes", :category => "coffee", :image => "../img/compressed/medium/photo-1461914756888-80f9821f5d17.min.jpg"},
			{:id => 7, :author => "Bryan Dennis", :title => "Refrigerated Treats Can Make For A Cool Event", :category => "coffee", :image => "../img/compressed/medium/photo-1470326030020-86a5ef9ca428.min.jpg"},
			{:id => 8, :author => "Linnie Miles", :title => "Cooking With Fine Italian Wine", :category => "coffee", :image => "../img/compressed/medium/photo-1477173249897-5afc98d3f565.min.jpg"},
			{:id => 9, :author => "Roy Garcia", :title => "Thrill Friends And Family With A Make It Yourself Pizza Party", :category => "coffee", :image => "../img/compressed/medium/photo-1484157239365-80e635261db7.min.jpg"}]

		.container.text-center
			%h1
				HAML + Flex =
				- (1..3).each do
					%i.fa.fa-heart
			.flex
				- @data.group_by {|x| x[:id]}.each do |id, array|
					- array.each do |x|
						-# Here's an example of how to do data attributes
						%a.card--outer{href: "##{x[:id]}", data: {:card_id => id}}
							.card-top__image{style: "background-image: url( #{x[:image]} )"}
							.card-bottom__details
								%span.title= x[:title]
								%hr
								%span.author= x[:author]

			%footer
				%span
					Made with
					%i.fa.fa-heart
					by
					%a{href: 'http://oesterkilde.dk?ref=haml', target: '_blank'} Kevin Ã˜sterkilde

		-# Javascript
		-# Vendor
		%script{src: '../node_modules/jquery/dist/jquery.min.js', type: 'text/javascript'}
		%script{src: '../node_modules/tether/dist/js/tether.min.js', type: 'text/javascript'}
		%script{src: '../node_modules/bootstrap/dist/js/bootstrap.min.js', type: 'text/javascript'}
