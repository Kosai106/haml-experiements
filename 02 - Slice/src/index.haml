%html
	%head
		%meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
		%meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
		%meta{charset: "utf-8"}

		%link{href: './../node_modules/tether/dist/css/tether.min.css', rel: 'stylesheet'}
		%link{href: './../node_modules/bootstrap/dist/css/bootstrap.min.css', rel: 'stylesheet'}
		%link{href: './../node_modules/font-awesome/css/font-awesome.min.css', rel: 'stylesheet'}
		%link{href: 'main.css', rel: 'stylesheet'}
		%title Slice
	%body

		- @data = [{"id" => 1, "author" => "Manuel Patric", "title" => "Cooking With The Power Of The Sun", "image" => "https://images.unsplash.com/photo-1477173249897-5afc98d3f565?dpr=1&auto=format&fit=crop&w=1500&h=994&q=80&cs=tinysrgb&crop="},
			{"id" => 2, "author" => "Aaron Rowe", "title" => "Smarter Food Choices 101 Tips For Busy Women", "image" => "https://images.unsplash.com/photo-1452882033718-1caccfcfe77f?dpr=1&auto=format&fit=crop&w=1500&h=1001&q=80&cs=tinysrgb&crop="},
			{"id" => 3, "author" => "Susie Wilkins", "title" => "Is Organic The Way Forward", "image" => "https://images.unsplash.com/photo-1444012236767-1b471c68781c?dpr=1&auto=format&fit=crop&w=1500&h=994&q=80&cs=tinysrgb&crop="},
			{"id" => 4, "author" => "Floyd Caldwell", "title" => "Cooking For One", "image" => "https://images.unsplash.com/photo-1432107294469-414527cb5c65?dpr=1&auto=format&fit=crop&w=1500&h=1000&q=80&cs=tinysrgb&crop="},
			{"id" => 5, "author" => "Francis Collins", "title" => "Regional Cuisine Down Home Southern Cooling", "image" => "https://images.unsplash.com/photo-1445888985293-8e1b904061c4?dpr=1&auto=format&fit=crop&w=1500&h=1000&q=80&cs=tinysrgb&crop="},
			{"id" => 6, "author" => "Virgie Pierce", "title" => "Top 3 Reasons Why You Need Cookie Reciepes", "image" => "https://images.unsplash.com/photo-1446321423766-c339f030bd0a?dpr=1&auto=format&fit=crop&w=1500&h=1125&q=80&cs=tinysrgb&crop="},
			{"id" => 7, "author" => "Bryan Dennis", "title" => "Refrigerated Treats Can Make For A Cool Event", "image" => "https://images.unsplash.com/photo-1470326030020-86a5ef9ca428?dpr=1&auto=format&fit=crop&w=1500&h=1000&q=80&cs=tinysrgb&crop="},
			{"id" => 8, "author" => "Linnie Miles", "title" => "Cooking With Fine Italian Wine", "image" => "https://images.unsplash.com/photo-1461914756888-80f9821f5d17?dpr=1&auto=format&fit=crop&w=1500&h=994&q=80&cs=tinysrgb&crop="},
			{"id" => 9, "author" => "Roy Garcia", "title" => "Thrill Friends And Family With A Make It Yourself Pizza Party", "image" => "https://images.unsplash.com/photo-1484157239365-80e635261db7?dpr=1&auto=format&fit=crop&w=1500&h=1000&q=80&cs=tinysrgb&crop="}]

		.container
			- @data.each_slice(3) do |array|
				.row
					- array.each do |m|
						.col-sm-12.col-lg-4
							.data{data: {:card_id => m['id']}}
								.title= m['title']
								.author= m['author']
								%img.image{src: "#{m['image']}", width: '100%', height: '250px', style: 'object-fit: cover;'}

		%script{src: './../node_modules/jquery/dist/jquery.min.js', type: 'text/javascript'}
		%script{src: './../node_modules/tether/dist/js/tether.min.js', type: 'text/javascript'}
		%script{src: './../node_modules/bootstrap/dist/js/bootstrap.min.js', type: 'text/javascript'}
